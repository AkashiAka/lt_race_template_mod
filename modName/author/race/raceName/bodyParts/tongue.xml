<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<tongue>

	<!-- 种族id -->
	<race>author_raceName</race>

	<!-- 参考原版coveringType 可以填	TONGUE
	如果要自定义
	舌头覆盖id 推荐命名 作者_种族名字_tongue 其中“作者_种族名字”与race文件中的相同
	需要coveringTypes(没有这个文件夹自己创建)中建立并填写tongue.xml文件
	 -->
	<coveringType>author_raceName_tongue</coveringType>
	
	<!-- 舌头长度，范围1~60
	0 ~5  "正常大小"
    5 ~10 "较长"
    10~20 "很长"
    20~30 "极长"
    30~60 "长到离谱"
	 -->
	<defaultLength>8</defaultLength>

	<!-- 单数名称 -->
	<name><![CDATA[舌头]]></name>
	<!-- 复数名称 -->
	<namePlural><![CDATA[舌头]]></namePlural>

	<!-- 对男性的描述 -->
	<descriptorsMasculine>
		<descriptor><![CDATA[龙一般]]></descriptor>
	</descriptorsMasculine>
	<!-- 对女性的描述 -->
	<descriptorsFeminine>
		<descriptor><![CDATA[龙一般]]></descriptor>
	</descriptorsFeminine>

	<!-- 角色的描述页面对舌头的描述。 -->
	<bodyDescription><![CDATA[
		[npc.Her]嘴里有一根[npc.a_tongueLength]、[npc.tongueColour(true)]、龙形的[npc.tongue]#IF(npc.isPiercedTongue())且已被穿孔#ENDIF。
	]]></bodyDescription>
	
	<!-- 舌头修改：
	 以<modifier>分隔
	 RIBBED("螺纹")
     TENTACLED("长有触手")
     BIFURCATED("分叉")
     WIDE("宽大")
     FLAT("平直")
     STRONG("有力")
     TAPERED("锥形")
	 -->
	<defaultTongueModifiers>
		<modifier>STRONG</modifier>
		<modifier>TAPERED</modifier>
	</defaultTongueModifiers>
	
</tongue>
