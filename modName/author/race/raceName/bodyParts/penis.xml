	<!-- 男性单数名称 -->
	<namesMasculine>
		<name><![CDATA[阴茎]]></name>
	</namesMasculine>
	<!-- 男性复数名称 -->
	<namesPluralMasculine>
		<name><![CDATA[阴茎]]></name>
	</namesPluralMasculine>

	<!-- 女性单数名称 -->
	<namesFeminine>
		<name><![CDATA[阴茎]]></name>
	</namesFeminine>
	<!-- 女性复数名称 -->
	<namesPluralFeminine>
		<name><![CDATA[阴茎]]></name>
	</namesPluralFeminine>

	<!-- 对部位的描述 -->
	<descriptors/>

	
	<!-- 部位修改：
	用<modifier>分隔
	HEATHED("带鞘")
    RIBBED("螺纹")
    TENTACLED("长有触手")
