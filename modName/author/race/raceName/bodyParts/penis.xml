<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<penis>

	<!-- 种族id -->
	<race>author_raceName</race>

	<!-- 种族部件转化时候显示的名称 一般是 种族名称 -->
	<transformationName><![CDATA[种族名称]]></transformationName>

	<!-- 允许阴毛 <pubicHairAllowed>true</pubicHairAllowed>-->

	<!-- 参考原版coveringType 可以填	PENIS
	如果要自定义
	阴茎覆盖id 推荐命名 作者_种族名字_penis 其中“作者_种族名字”与race文件中的相同
	需要coveringTypes(没有这个文件夹自己创建)中建立并填写penis.xml文件
 	-->
	<coveringType>author_raceName_penis</coveringType>
	
	<!-- 阴囊描述， 完成同文件夹下的testicle.xml文件-->
	<testicleType>author_raceName_testicle</testicleType>
	
	<!-- 阴茎特殊变化文本(一般没有) -->
