<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<coveringType>
	<!-- GENERAL INFORMATION: If you are unsure of anything, please use the LT Discord to ask for help! -->
	
	<!-- 覆盖的种类：
	MAIN_SKIN("皮肤"),
    MAIN_HAIR("毛发"),
    MAIN_FUR("皮毛"),
    MAIN_SCALES("鳞片"),
    MAIN_FEATHER("羽毛"),
    MAIN_CHITIN("几丁质外壳"),
    EYE_IRIS("虹膜"),
    EYE_PUPIL("瞳孔"),
    EYE_SCLERA("巩膜"),
    ANTENNAE("触须"),
    HORN("角"),
    ANTLER("鹿角"),
    HAIR("头发"),
    ANUS("肛门"),
    MOUTH("嘴巴"),
    TONGUE("舌头"),
    NIPPLE("乳头"),
    NIPPLE_CROTCH("胯乳乳头"),
    VAGINA("阴道"),
    PENIS("阴茎"),
    SPINNERET("丝囊"),
    BODY_HAIR("体毛"),
    ARTIFICIAL("假屌")
    FLUID("液体")
    MAKEUP("妆容")
	 -->
	<category>MAIN_FUR</category>
	
	<!-- 限定词-->
	<determiner><![CDATA[一层]]></determiner>
	
	<!-- 覆盖的单数名字 -->
	<name><![CDATA[皮毛]]></name>
	
	<!-- 覆盖的复数名字-->
	<namePlural pluralByDefault="false"><![CDATA[皮毛]]></namePlural>
	
	<!-- 覆盖物修改
	EYE("眼睛")
    FLUID("液体")
    MAKEUP("妆容")
    GLOSSY("光亮")
    MATTE("哑光")
    SPARKLY("闪闪发光")
    METALLIC("金属光泽")
    BLAZING("耀眼")
    SHIMMERING("闪烁")
    GLITTERING("晶莹剔透")
    SWIRLING("旋动")
    GOOEY("软黏")
    SMOOTH("光滑")
    ROUGH("粗糙")
    LEATHERY("革质")
    SHORT("较短")
    SILKEN("柔顺")
    FLUFFY("松软")
    SHAGGY("蓬乱")
    FURRY("类皮毛")
    COARSE("凌乱")
     -->
	<naturalCoveringModifiers>
		<modifier>FLUFFY</modifier>
		<modifier>SMOOTH</modifier>
	</naturalCoveringModifiers>
	
	<!--自然无法生成，仅转化可用-->
	<extraCoveringModifiers/>
	
	<!-- 覆盖的图案(weighting是自然生成的加权)
	NONE("单色")
    FLUID("液态")

    ORIFICE_ANUS("肛门")
    ORIFICE_VAGINA("阴道")
    ORIFICE_MOUTH("嘴")
    ORIFICE_SPINNERET("丝囊")
    ORIFICE_NIPPLE("乳头")
    ORIFICE_NIPPLE_CROTCH("腹部乳头")

    EYE_IRISES("虹膜标准")
    EYE_IRISES_HETEROCHROMATIC("虹膜异色")
    EYE_PUPILS("瞳孔标准")
    EYE_PUPILS_HETEROCHROMATIC("瞳孔异色")
    EYE_SCLERA("巩膜标准")
    EYE_SCLERA_HETEROCHROMATIC("巩膜异色")

    HIGHLIGHTS("高光")
    STRIPED("条纹")
    SPOTTED("斑点")
    MOTTLED("斑驳")
    MARKED("花纹")
    FRECKLED("雀斑")
    FRECKLED_FACE("有雀斑的脸")
    OMBRE("混色")
    -->
	<naturalPatterns>
		<pattern weighting="1">SPOTTED</pattern>
		<pattern weighting="1">STRIPED</pattern>
	</naturalPatterns>
	
	<!-- 自然无法生成，仅转化可用 -->
	<extraPatterns/>
	
	
	<!-- The colours which this covering has available to it.
	'natural' colours are those which can be chosen when a race with this covering is spawning in naturally.
	The 'extra' colours are those which are available via transformation.
	Colour values can be found here: https://github.com/Innoxia/liliths-throne-public/blob/dev/src/com/lilithsthrone/utils/colours/PresetColour.java
	Instead of defining colours individually, you can use the 'values' attribute to apply pre-defined colours.
	Acceptable 'values' are found here: https://github.com/Innoxia/liliths-throne-public/blob/dev/src/com/lilithsthrone/utils/colours/ColourListPresets.java -->
	
	<naturalColoursPrimary>
		<colour>COVERING_TAN</colour>
		<colour>COVERING_BROWN</colour>
		<colour>COVERING_BROWN_DARK</colour>
	</naturalColoursPrimary> 
	
	<extraColoursPrimary values="allCoveringColours"/>
	
	<naturalColoursSecondary>
		<colour>COVERING_BLACK</colour>
	</naturalColoursSecondary>
	
	<extraColoursSecondary values="allCoveringColours"/>
	
</coveringType>
